---
// Click button, get confetti!
// Styled by Tailwind :)
---

<button
  class="appearance-none py-xs px-sm bg-tertiary100 text-white font-semibold rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75"
>
  <slot />
</button>

<script>
  import confetti from "canvas-confetti";
  const buttons = document.body.querySelectorAll("button");

  if (buttons) {
    buttons.forEach((button) => {
      button.addEventListener("click", () => confetti());
    });
  }
</script>
