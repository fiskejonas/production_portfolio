---
// Component Imports
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/styles.css";
import Button5 from "../components/Button5.astro";
---

<MainLayout title="Selected Creative Assets">
  <div
    class="selected_wrapper w-full h-full flex flex-col items-center justify-center mt-md"
  >
    <div
      class="selected_titles flex flex-col w-full pt-md pb-sm items-center justify-center gap-xs h-full"
    >
      <h1 class="text-lg font-helvetica2">
        video<span class="text-accent100">.</span>
      </h1>
      <h2 class="text-sm font-helvetica2 text-neutral300">
        Wavemaker Production
      </h2>
    </div>
    <section class="w-full h-full" id="video-gallery2"></section>
  </div>
  <div class="line flex flex-col items-center justify-center w-full">
    <div class="border border-b-4 mt-md w-1/2"></div>
    <Button5>Copy link</Button5>
  </div>
  <template class="video-template">
    <article
      class="video-template_article max-w-[500px] lg:rounded-md rounded-sm group"
    >
      <video
        width="1080px"
        height="1920px"
        controls
        class="video-template_frame shadow-lg lg:rounded-md rounded-sm"
        src=""></video>
    </article>
  </template>
  <script>
    import "../scripts/selected-cards-video.js";
  </script>
</MainLayout>
